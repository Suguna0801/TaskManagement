<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <style>
       
        .navbar {
            background-color: green; 
        }

        .navbar-brand {
            font-size: 2.0rem; 
            font-weight: bold; 
            color: white; 
        }

        
        .navbar-nav .nav-link {
            font-size: 1.4rem; 
            color: white;
        }

            .navbar-nav .nav-link:hover {
                color: #ffc107; 
                text-decoration: underline; 
            }

        
        .navbar-nav {
            margin-left: auto; 
        }
    </style>
    @RenderSection("scripts", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Task Management System</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AssignedTasks", "Employee")">Assigned Tasks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("CompletedTasks", "Employee")">Completed Tasks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
