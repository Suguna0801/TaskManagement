<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <style>
        /* Custom styles for navbar */
        .navbar {
            background-color: #007bff; /* Change this to your desired color */
        }
        .navbar-brand {
            font-size: 2.0rem; /* Increase font size for the brand */
            color: white; /* Change text color */
        }
        .navbar-nav .nav-link {
            font-size: 1.2rem; /* Increase font size for nav links */
            padding: 10px 15px; /* Increase padding */
            color: white; /* Change text color*/
            
            
        }
        .navbar-nav .nav-link:hover {
            color: #ffc107; /* Change hover color */
        }
    </style>
    @RenderSection("scripts", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">Task Management System</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto"> <!-- Align items to the right -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("NewEmployees", "Admin")">New Employees</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AssignedTasks", "Admin")">Assigned Tasks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("UnassignedTasks", "Admin")">Unassigned Tasks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Account")">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
