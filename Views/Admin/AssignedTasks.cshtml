
@model IEnumerable<signedup.Models.Task>
@{
    ViewBag.Title = " Assigned Task";
    Layout = "~/Views/Shared/AdminHomepage.cshtml"; // Apply the layout with the navbar
}

<h2>Your Assigned Tasks</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Deadline</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Deadline?.ToString("dd.MM.yyyy ")</td>
                <td>@(task.IsCompleted ? "Completed" : "Pending")</td>
            </tr>
        }
    </tbody>
</table>
